<h1>Welcome to RegisterApp: It is time to buy!</h1>

<h2>See out products available: </h2>

<% @products.each do |product| %>
  <div>
    <h2><%= product.name %></h2>
    <p>Price: $<%= product.price %></p>
    <%= button_to 'Add to Cart', cart_cart_items_path(current_cart, product_id: product.id), method: :post %>
  </div>
<% end %>
<%= link_to 'Go to Cart', cart_path(current_cart) %>
